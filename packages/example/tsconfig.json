{
  "compilerOptions": {
    "outDir": "build/",
    "rootDir": "src/",
    "target": "es5",
    "module": "esnext",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["../../node_modules", "node_modules", "build"]
}
